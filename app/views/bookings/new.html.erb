<%= form_for @booking, url: bookings_path do |booking| %>
  <%= booking.hidden_field :flight_id, value: @booking.flight_id %>
  <%= booking.fields_for :passengers do |passenger| %>
    <%= passenger.label :name %>
    <%= passenger.text_field :name%>
    <%= passenger.label :address %>
    <%= passenger.text_field :address%>
    <%= passenger.label :city %>
    <%= passenger.text_field :city%>
    <%= passenger.label :state %>
    <%= passenger.text_field :state%>
    <%= passenger.label :zipcode %>
    <%= passenger.text_field :zipcode%>
  <% end %>
  <%= booking.submit %>
<% end %>
